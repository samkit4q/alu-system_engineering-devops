#!/usr/bin/env bash
# This script installs nginx web server and configures it to listen on port 80
# It also sets up nginx to return a page containing "Holberton School" when queried at the root

# Update package index and install nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Make sure nginx is running
sudo service nginx start

# Configure nginx to listen on port 80 and return a page with "Holberton School" at the root
sudo bash -c 'echo "Holberton School for the win!" > /usr/share/nginx/html/index.html'

# Check if nginx is running on port 80
if sudo netstat -tuln | grep ':80\s'; then
    echo "Nginx is listening on port 80"
else
    echo "Nginx is not listening on port 80"
fi

